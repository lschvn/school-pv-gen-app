{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="min-h-[70vh] flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="bg-white rounded-xl shadow-2xl overflow-hidden">
            <div class="bg-gradient-to-r from-blue-500 to-indigo-600 p-6">
                <h2 class="text-center text-3xl font-extrabold text-white">Welcome Back</h2>
            </div>
            <div class="p-8">
                {% if error %}
                    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded-md" role="alert">
                        <p class="text-red-700">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-6 rounded-md">
                        <p class="text-blue-700">You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="font-medium text-indigo-600 hover:text-indigo-500 transition duration-150 ease-in-out">Logout</a></p>
                    </div>
                {% endif %}

                <form method="post">
                    <div class="mb-6">
                        <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" autocomplete="email" required autofocus placeholder="Email Address">
                    </div>
                    
                    <div class="mb-6">
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                        <input type="password" name="_password" id="password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" autocomplete="current-password" required placeholder="Password">
                    </div>

                    {# <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> #}

                    {#
                    <div class="mb-6 flex items-start">
                        <input type="checkbox" name="_remember_me" id="_remember_me" class="h-5 w-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 mr-2 mt-0.5">
                        <label for="_remember_me" class="text-sm text-gray-600">Remember me</label>
                    </div>
                    #}

                    <div class="mt-8">
                        <button class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" type="submit">
                            Sign in
                        </button>
                    </div>
                </form>
                
                <div class="text-center mt-6">
                    <p class="text-sm text-gray-600">
                        Don't have an account? 
                        <a href="{{ path('app_register') }}" class="font-medium text-indigo-600 hover:text-indigo-500 transition duration-150 ease-in-out">
                            Register
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
